<.header>
  Listing Authors
</.header>

<div id="authors" class="grid grid-cols-4 gap-8">
  <div :for={author <- @authors}>
    <% book = Bookshelf.Authors.get_author!(author.id).books |> Enum.at(0) %>
    <.link href={~p"/authors/#{author}"}>
      <img src={"data:#{book.cover_type};base64, #{book.cover}"} alt={"#{book.title} cover"} />
      <span><%= author.name %></span>
    </.link>
  </div>
</div>
